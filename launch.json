    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "name": "Launch Extension",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm",
            "request": "launch",
            "type": "extensionHost"
        },
        
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost/DPW2_U2_A2_ENMartínezMuñoz/Index.html",
            "webRoot": "${workspaceFolder}"
        },
    {
        "name": "Attach to Chrome",
        "port": 3306,
        "request": "attach",
        "type": "chrome",
        "webRoot": "${workspaceFolder}"
    },

        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost/DPW2_U2_A2_ENMartínezMuñoz/Index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Edge",
            "port": 3306,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}"
        },
    ]
